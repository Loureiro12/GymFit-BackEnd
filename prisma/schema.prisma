generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
  PROFESSOR
}

enum StatusUserStatus {
  ENABLE
  DISABLED
}

model StudentUser {
  id        String           @id @default(uuid())
  firstName String
  lastName  String
  email     String           @unique
  password  String
  gender    String?
  birthday  String?
  weight    String?
  height    String?
  goal      String?
  status    StatusUserStatus @default(ENABLE)

  role Role @default(STUDENT)

  @@map("studentUsers")
}

model Food {
  id            String @id @default(uuid())
  name          String
  portion       String
  calories      String
  carbohydrates String
  protein       String
  fat           String
  fiber         String

  @@map("foods")
}

enum MuscleGroup {
  thorax
  shoulder
  triceps
  back
  abdomen
  biceps
  leg
  glute
}

model Exercise {
  id          String      @id @default(uuid())
  name        String
  imageUrl    String
  videoUrl    String
  muscleGroup MuscleGroup

  @@map("exercises")
}
